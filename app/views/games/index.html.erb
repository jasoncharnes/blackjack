<div class="flex-col">
  <% if @game %>
    <div class="mb-4">
      <div class="text-xl text-center">
        Dealer: <%= @game.dealer_hand.value %>
      </div>
      <div class="flex justify-center my-4">
        <%= render(CardComponent.with_collection(@game.dealer_hand.cards)) %>
      </div>
    </div>
    <div>
      <div class="text-xl text-center">
        Player: <%= @game.player_hand.value %>
      </div>
      <div class="flex justify-center my-4">
        <%= render(CardComponent.with_collection(@game.player_hand.cards)) %>
      </div>
      <% if @game.ended? %>
        <div class="text-center">
          <%= @game.result(@game.player_hand) %>
        </div>
      <% end %>
      <% if @game.player_hand.playing? %>
        <div class="flex justify-center my-4">
          <%= link_to "Hit", "#", class: "bg-green-200 text-green-700 font-semibold rounded py-1 px-2 mx-4", data: { reflex: "click->GameReflex#hit" } %>
          <%= link_to "Stand", "#", class: "bg-blue-200 text-blue-700 font-semibold rounded py-1 px-2 mx-4", data: { reflex: "click->GameReflex#stand" } %>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="my-6 text-center">
    <%= link_to "Start new game", "#", class: "font-semibold bg-gray-200 py-2 px-3 rounded", data: { reflex: "click->GameReflex#start" } %>
  </div>
</div>
